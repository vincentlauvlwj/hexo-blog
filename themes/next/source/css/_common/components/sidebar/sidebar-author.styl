.site-author-image {
  display: block;
  margin-top: 5px;
  margin: 0 auto;
  max-width: 60px;
  height: auto;
  border: 2px solid #333;
  padding: 2px;
}

.site-author-name {
  margin: 5px 0 0;
  font-size: 18px;
  color: $site-author-name-color;
}

.site-description {
  margin-top: 5px;
  font-size: $site-description-font-size;
  color: $site-description-color;
}
