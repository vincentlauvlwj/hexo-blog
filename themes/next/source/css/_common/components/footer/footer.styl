.footer {
  font-size: 14px;
  color: $grey-dark;

  img { border: none; }
}

.footer-inner { 
  text-align: center !important; 
}

.footer .footer-inner div {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.with-love {
  display: inline-block;
  margin: 0 5px;
}

.powered-by,
.theme-info { display: inline-block; }

.powered-by {
  margin-right: 10px;

  &::after {
    content: "|";
    padding-left: 10px;
  }
}

.cc-license {
  margin-top: 10px;
  text-align: center;

  .cc-opacity {
    opacity: 0.8;
    border-bottom: none;

    &:hover { opacity: 0.9; }
  }

  img { display: inline-block; }

  a { border: none; }
}
