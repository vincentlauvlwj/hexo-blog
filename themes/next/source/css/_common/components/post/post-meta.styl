.posts-expand .post-meta {
  margin: 3px 0 60px 0;
  color: $grey-dark;
  font-size: 12px;
  text-align: center;

  .post-category-list {
    display: inline-block;
    margin: 0;
    padding: 3px;
  }
  .post-category-list-link {
    color: $grey-dark;
  }
}


.post-meta-item-icon {
  display: inline-block;
  margin-right: 3px;
}
.post-meta-item-text {
  display: inline-block;
  +mobile() {
    display: none;
  }
}

.posts-expand .post-comments-count {
  +mobile() { display: none; }
}
